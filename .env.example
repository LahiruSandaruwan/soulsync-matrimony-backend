# Application Configuration
APP_NAME=SoulSync
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# App Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# App Maintenance
APP_MAINTENANCE_DRIVER=file

# PHP CLI Server
PHP_CLI_SERVER_WORKERS=4

# Password Hashing
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=soulsync_matrimony
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting Configuration (for real-time chat)
BROADCAST_CONNECTION=pusher

# File Storage
FILESYSTEM_DISK=local

# Queue Configuration
QUEUE_CONNECTION=database

# Cache Configuration
CACHE_STORE=database

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@soulsync.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for S3 storage in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Pusher Configuration (Real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Exchange Rate API (for currency conversion)
EXCHANGE_RATE_API_KEY=
EXCHANGE_RATE_BASE_URL=https://api.exchangerate-api.com/v4/latest/USD

# Payment Gateway Configuration
# Stripe (International payments)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# PayPal (International payments)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# PayHere (Sri Lankan payments)
PAYHERE_MERCHANT_ID=
PAYHERE_SECRET=
PAYHERE_CURRENCY=LKR

# WebXPay (Sri Lankan payments)
WEBXPAY_API_KEY=
WEBXPAY_SECRET=

# AI/ML Service Configuration
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# Social Login Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=

# SMS Service Configuration (for phone verification)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# Error Tracking (Production)
SENTRY_LARAVEL_DSN=

# Rate Limiting Configuration
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_DECAY_MINUTES=15
RATE_LIMIT_API_REQUESTS=100
RATE_LIMIT_API_DECAY_MINUTES=1

# Application Features
ENABLE_SOCIAL_LOGIN=true
ENABLE_PHONE_VERIFICATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_HOROSCOPE_MATCHING=true
ENABLE_AI_MATCHING=true
ENABLE_VOICE_INTRO=true

# File Upload Limits
MAX_PHOTO_SIZE_MB=5
MAX_VOICE_SIZE_MB=10
MAX_PHOTOS_PER_USER=10

# Subscription Configuration
DEFAULT_FREE_MATCHES_PER_DAY=5
DEFAULT_PREMIUM_MATCHES_PER_DAY=50
DEFAULT_SUPER_LIKES_PER_DAY=5

# Admin Configuration
ADMIN_EMAIL=admin@soulsync.com
SUPPORT_EMAIL=support@soulsync.com

# Development Tools
TELESCOPE_ENABLED=false
PULSE_ENABLED=false
NIGHTWATCH_ENABLED=false
