# Application
APP_NAME="SoulSync Matrimony"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Frontend URLs (for CORS and redirects)
FRONTEND_URL=http://localhost:4200
MOBILE_APP_URL=soulsync://
ADMIN_URL=http://localhost:4201

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=soulsync_matrimony
DB_USERNAME=root
DB_PASSWORD=

# Database for Testing (SQLite recommended)
DB_TEST_CONNECTION=sqlite
DB_TEST_DATABASE=:memory:

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=soulsync

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@soulsync.com"
MAIL_FROM_NAME="${APP_NAME}"

# Email Service Providers (choose one)
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_SECRET=your-mailgun-secret
MAILGUN_ENDPOINT=api.mailgun.net

POSTMARK_TOKEN=your-postmark-token

AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-s3-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# File Storage
FILESYSTEM_DISK=local

# Payment Gateways
STRIPE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_SANDBOX=true
PAYPAL_WEBHOOK_ID=your_webhook_id

PAYHERE_MERCHANT_ID=your_merchant_id
PAYHERE_SECRET=your_payhere_secret
PAYHERE_SANDBOX=true

WEBXPAY_MERCHANT_ID=your_merchant_id
WEBXPAY_API_KEY=your_api_key
WEBXPAY_SECRET_KEY=your_secret_key
WEBXPAY_SANDBOX=true

# Currency Exchange API
EXCHANGE_RATE_API_KEY=your_exchangerate_api_key
EXCHANGE_RATE_API_URL=https://v6.exchangerate-api.com/v6/

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# Pusher
PUSHER_APP_ID=your_app_id
PUSHER_APP_KEY=your_app_key
PUSHER_APP_SECRET=your_app_secret
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

PUSHER_BEAMS_INSTANCE_ID=your_instance_id
PUSHER_BEAMS_SECRET_KEY=your_secret_key

# SMS Services
TWILIO_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM=+1234567890

# Social Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_organization_id

# Analytics
GOOGLE_ANALYTICS_MEASUREMENT_ID=G-XXXXXXXXXX
GOOGLE_ANALYTICS_API_SECRET=your_api_secret

# Image Storage
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PREMIUM_MULTIPLIER=2

# Security
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="${APP_NAME}"

# System Settings
DEFAULT_PLAN=free
MIN_PROFILE_COMPLETION=70
FREE_DAILY_MATCHES=5
PREMIUM_DAILY_MATCHES=50

# Environment Specific
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
