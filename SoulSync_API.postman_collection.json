              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"string\"\n}"
            },
            "url": { "raw": "/api/auth/login", "path": ["api", "auth", "login"] }
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "/api/auth/logout", "path": ["api", "auth", "logout"] }
          },
          "response": []
